<h1 class="product_title <%= @product_spec.technology%>"><%= @product_spec.sku%></h1>
<div class="main_table_div">
    <table id="main_table" class="main main_table">
        <tr>
            <th>DVR Technology</th><td><%= @product_spec.technology%></td>
        </tr>
        <tr>
            <th>Channels</th><td><%= @product_spec.channels%></td>  
        </tr>
        <tr>
            <th>Recording Resolution</th><td><%= @product_spec.recording_resolutions%></td>
        </tr>
        <tr>
            <th>Live Viewing Resolution</th><td><%= @product_spec.live_viewing_resolutions%></td>
        </tr>
        <tr>
            <th>Live Display FPS</th><td><%= @product_spec.live_fps%></td>
        </tr>
        <tr>
            <th>Hard Drive</th><td><%= @product_spec.hard_drive_support%></td>
        </tr>
        <tr>
            <th>Remote Monitoring</th><td><%= @product_spec.remote_monitoring%></td>
        </tr>
        <tr>
            <th>Compatibility</th><td><%= @product_spec.os_compatibility%></td>
        </tr>
        <tr>
            <th>Connects With</th><td><%= @product_spec.product_compatibility%></td>
        </tr>
    </table>
</div>
<div class="main_table_div">
    <%= image_tag @product_spec.front_panel.url %>
</div>