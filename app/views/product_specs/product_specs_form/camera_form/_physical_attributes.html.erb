<div class="col-lg-5">
	<%= form_for @product_spec do |f| %>
		<h2 class="">Physical Attributes</h2>
		<div class="form-group">
			<%= f.label "Is this product weather proof" %>
		    <%= f.select :weather_proof, @yes_or_no,:class =>"form-control"%>
		</div>
		<div class="form-group">
			<%= f.label "What is the ip rating of this product?" %>
		    <%= f.select :ip_rating,@ip_ratings,{},{:multiple => true, :size => @ip_ratings.size,:class =>"form-control"}%>
		</div>
		<div class="form-group">
			<%= f.label "How is the body constructed with this product?" %>
		    <%= f.text_field :body_construction,:class => "form-control"%>
		</div>
		<div class="form-group">
			<%= f.label :mounting_hardware, 'What mounting hardware is included with this product?' %>
			<%= f.select(:mounting_hardware, @mounting_hardware,{},{ :multiple => true, :size => @mounting_hardware.size,:class =>"form-control"}) %>
		</div>
		<div class="form-group">
			<%= f.label "How much does this product weigh in ounces?" %>
		    <%= f.number_field :weight, step: :any, :class => "form-control"%>
		</div>
		<div class="form-group">
			<%= f.label "What are the dimensions (WITHOUT bracket) of this product?" %>
		    <%= f.text_field :dimensions,:class => "form-control"%>
		</div>
		<div class="form-group">
			<%= f.label "What are the dimensions (WITH bracket) of this product?" %>
		    <%= f.text_field :dimension_with_bracket,:class => "form-control"%>
		</div>
		<div class="form-group">
			<%= f.label "What is the operating temperature of this product?" %>
		    <%= f.text_field :operating_temperature,:class => "form-control"%>
		</div>
		<%= f.submit "Update Spec Sheet", :class => "btn btn-default" %>
	<% end %>
</div>