<div class="col-lg-5">
	<%= form_for @product_spec do |f| %>
		<h2 class="">Basic <%=@product_spec.product_type%> Info</h2>
		<div class="form-group">
			Technology is: <span class=""><%=@product_spec.technology%></span>
		</div>
		<div class="form-group">
			<%= f.label "What kind of cameras does this product connect with?" %>
		    <%= f.text_field(:connects_with, value:@product_spec.product_compatibility) %>
		</div>
		<%= f.submit "Update Spec Sheet", :class => "btn btn-default" %>
	<% end %>
</div>