<div class="panel-heading">
	<h2 class="header">Remote Monitoring</h2>
</div>
<div class="panel-body">
	<%= form_for @product_spec do |f| %>
		<div class="form-group">
			<%= f.label "Can this product be used by itself (is it standalone)?" %>
		    <%= f.text_field(:use_as_standalone) %>
		</div>
		<div class="form-group">
			<%= f.label "Which of the following mobile applications are supported by this product?" %>
		    <%= f.select(:mobile_support, @supported_mobile_devices,{},{ :multiple => true, :size => @supported_mobile_devices.size,:class =>"form-control"}) %>
		</div>
		<div class="form-group">
			<%= f.label "What kind of Recorders does this product connect with?" %>
		    <%= f.text_field(:connects_with, value:@product_spec.product_compatibility) %>
		</div>
		<%= f.submit "Update Spec Sheet", :class => "btn btn-default" %>
	<% end %>
</div>