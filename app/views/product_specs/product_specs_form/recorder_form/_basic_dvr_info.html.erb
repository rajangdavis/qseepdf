<div class="col-lg-5">
	<%= form_for @product_spec do |f| %>
		<h2 class="">Basic <%=@product_spec.product_type%> Info</h2>
		<div class="form-group">
			Technology is: <span class=""><%=@product_spec.technology%></span>
		</div>
		<div class="form-group">
			<%= f.label "How many channels does this product have?" %>
		    <%= f.select :channels, @channels,{},:class => "form-control"%>
		</div>
		<div class="form-group">
			<%= f.label "What are the supported recording resolution(s) for this product?" %>
		    <%= f.select(:resolution, @recording_resolutions,{},{ :multiple => true, :size => @recording_resolutions.size,:class =>"form-control"}) %>
		</div>
		<div class="form-group">
			<%= f.label "What are the supported display resolution(s) for this product?" %>
		    <%= f.select(:display_resolution, @display_resolutions,{},{ :multiple => true, :size => @display_resolutions.size,:class =>"form-control"}) %>
		</div>
		<div class="form-group">
			<%= f.label "What is the live frames per second for this product?" %>
		    <%= f.number_field(:frames_per_second, min: 1) %>
		</div>
		<div class="form-group">
			<%= f.label "What is the max hard drive size (in TB's) for this product?" %>
		    <%= f.number_field(:hard_drive_size, min: 1) %>
		</div>
		<div class="form-group">
			<%= f.label "What is the max number of hard drives supported by this product?" %>
		    <%= f.number_field(:number_of_harddrives, min: 1) %>
		</div>
		<div class="form-group">
			<%= f.label "What is the max number of simultaneous users supported by this product?" %>
		    <%= f.number_field(:max_users, min: 1) %>
		</div>
		<div class="form-group">
			<%= f.label "Which operating systems are supported by this product?" %>
		    <%= f.text_field(:os_compatibility, value:@product_spec.os_compat) %>
		</div>
		<div class="form-group">
			<%= f.label "What kind of cameras does this product connect with?" %>
		    <%= f.text_field(:connects_with, value:@product_spec.product_compatibility) %>
		</div>
		<div class="form-group">
			<%= f.label "What kind of monitor connections are supported by this product?" %>
		    <%= f.text_field(:monitor_connections) %>
		</div>
		<%= f.submit "Update Spec Sheet", :class => "btn btn-default" %>
	<% end %>
</div>