<div class="panel-heading">
	<h2 class="header">Physical</h2>
</div>
<div class="panel-body">
	<%= form_for @product_spec do |f| %>
		<div class="form-group">
			<%= f.label "How much product does this product weigh in pounds?" %>
		    <%= f.number_field :weight, step: :any, :class => "form-control"%>
		</div>
		<div class="form-group">
			<%= f.label "What are the dimensions of this product?" %>
		    <%= f.text_field :dimensions,:class => "form-control"%>
		</div>
		<div class="form-group">
			<%= f.label "What is the operating temperature of this product?" %>
		    <%= f.text_field :operating_temperature,:class => "form-control"%>
		</div>
		<%= f.submit "Update Spec Sheet", :class => "btn btn-default" %>
	<% end %>
</div>